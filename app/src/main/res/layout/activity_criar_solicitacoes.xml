
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFDF6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_notificar02"
                    android:contentDescription="Logo" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_perfil_topo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/perfil"
                    android:contentDescription="Perfil"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/icon_voltar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/voltar"
                    android:contentDescription="Voltar"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <TextView
                    android:id="@+id/tvTituloNotificar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notificar"
                    android:textColor="#000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/notificacao" android:contentDescription="Ícone de Alerta" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_sugeridas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="4dp"
                android:layout_marginBottom="12dp"
                android:background="#E5E5E5"
                android:clipToOutline="true"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/header_sugeridas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sugeridas"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/estrela" android:contentDescription="Ícone de Sugeridas"
                        android:layout_marginEnd="8dp"/>

                    <ImageView
                        android:id="@+id/icon_sugeridas_seta"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/proximo" android:contentDescription="Expandir/Recolher"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list_sugeridas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"> <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:id="@+id/item_vidro_aberto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vidro Aberto"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/proximo"
                            android:contentDescription="Detalhes"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_porta_aberta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Porta Aberta"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/proximo"
                            android:contentDescription="Detalhes"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_local_improprio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Local Impróprio"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/proximo"
                            android:contentDescription="Detalhes"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_farol_ligado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Farol Ligado"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/proximo"
                            android:contentDescription="Detalhes"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_fora_da_vaga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fora da Vaga"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/proximo"
                            android:contentDescription="Detalhes"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_carro_bloqueando"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Carro me bloqueando"
                            android:textColor="#000"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/proximo"
                            android:contentDescription="Detalhes"/>
                    </LinearLayout>

                </LinearLayout> </LinearLayout> <LinearLayout
            android:id="@+id/card_personalizada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="12dp"
            android:background="#E5E5E5"
            android:clipToOutline="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personalizada"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/proximo"
                android:contentDescription="Criar personalizada"/>
        </LinearLayout>

        </LinearLayout> </ScrollView>