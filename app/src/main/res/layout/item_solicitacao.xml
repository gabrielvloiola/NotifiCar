<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#F0F0F0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvLabelMotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo:"
            android:textColor="@color/hint_color"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvMotivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Vidro Aberto"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvLabelMotivo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvLabelPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carro:"
            android:textColor="@color/hint_color"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvMotivo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvModeloCarro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ford Ka (VFG-2345)"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelPlaca"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/imgStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_alerta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>