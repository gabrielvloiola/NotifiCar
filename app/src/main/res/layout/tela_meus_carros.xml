<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF6"
    tools:context=".TelaMeusCarros">

    <RelativeLayout
        android:id="@+id/header_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgLogoHeader"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_notificar02"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:contentDescription="Logo" />

        <ImageView
            android:id="@+id/imgPerfilHeader"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/perfil"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Perfil" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_top"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imgVoltar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/voltar"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="Voltar" />

        <TextView
            android:id="@+id/tvTituloMeusCarros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meus Carros"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/imgIconeCarroHeader"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/carrinhopreto"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Ãcone de Carros" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCarros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_secondary"
        android:layout_above="@id/btnAdicionarCarro"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvListaVazia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nenhum carro cadastrado."
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btnAdicionarCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#E5E5E5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adicionar carro"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_adicionar_carro"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>